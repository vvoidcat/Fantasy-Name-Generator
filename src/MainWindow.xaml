<Window x:Class="fantasy_namegen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fantasy_namegen"
        mc:Ignorable="d"
        Title="fantasy-namegen" Height="600" Width="800"
                                MinHeight="600" MinWidth="800"
                                MaxHeight="600" MaxWidth="800">
    
    <StackPanel>

        <!-- APP SETTINGS -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="show/hide" />
            <Button Grid.Column="1" Content="settings" />
            <Button Grid.Column="2" Content="presets" />
            <Button Grid.Column="3" Content="custom" />
            <Button Grid.Column="4" Content="history" />
        </Grid>

        <TextBox Text="aboba aboba aboba aboba"/>
        

        <!-- GENERATE -->

        <StackPanel>
            <Button Name="buttonGenerate"
                Content="generate"
                FontSize="19"
                Margin="10 120 10 10"
                Width="150"
                Height="35"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Top"/>

            <TextBlock Name="textName_0"
                       Text="Thename"
                       Margin="0 30 0 0"
                       FontSize="30"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Name="textName_1"
                       Text="Theothername"
                       Margin="0 20 0 0"
                       FontSize="20"
                       FontWeight="Thin"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Name="textName_2"
                       Text="Anothername"
                       Margin="0 10 0 0"
                       FontSize="20"
                       FontWeight="Thin"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Name="textName_3"
                       Text="Name"
                       Margin="0 10 0 0"
                       FontSize="20"
                       FontWeight="Thin"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBlock Name="textName_4"
                       Text="Namename"
                       Margin="0 10 0 0"
                       FontSize="20"
                       FontWeight="Thin"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </StackPanel>


        <!-- LOGO -->

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Name="textLogo"
                   Text="fantasy-namegen"
                   Margin="0 100 20 0"
                   FontSize="10"
                   FontWeight="Bold"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"/>
        </Grid>

    </StackPanel>

</Window>
