<UserControl x:Class="NAMEGEN.Ui.PanelAdvanced"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="830">

    <!-- delete later -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../DictionaryStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Canvas Name="canvasPanelAdvanced"
            Visibility="{Binding panelVisibilities[2].val}">
        <Rectangle
                Name="bgOverlayAdvanced"
                Height="120"
                Width="830" 
                Fill="Lavender"
                Canvas.ZIndex="0" />

        <!-- CUSTOM PRESET PANEL -->
        <StackPanel Name="panelCustom"
                        Canvas.ZIndex="1"
                        Margin="0 10 0 0"
                        Orientation="Horizontal">

            <!-- NAMEGEN SETTINGS -->
            <StackPanel Margin="20 0 0 0">

                <!-- MIN MAX LENGTH -->
                <StackPanel Orientation="Horizontal"
                                Margin="10 0 0 0">

                    <!-- NAME LENGTH -->
                    <TextBlock
                            Name="tblockLength"
                            Text="name length:"
                            FontSize="12"/>

                    <!-- MIN -->
                    <TextBlock
                            Name="tblockMinLength"
                            Text="min:"
                            Margin="35 0 0 0"
                            FontSize="12"/>

                    <Button
                            Name="buttonMinLengthLesser"
                            Content="&lt;"
                            Margin="10 0 0 0"
                            Padding="0 -2 0 0"
                            Style="{StaticResource stylePanelSquareButtons}"
                            Height="18"
                            Width="18"/>

                    <TextBox
                            Name="tboxMinLength"
                            Text="{Binding minLen}"
                            IsReadOnly="True"
                            FontSize="12"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Padding="0 0 0 0"
                            Style="{StaticResource stylePanelTextBoxes}"
                            Height="18"
                            Width="30"/>

                    <Button 
                            Name="buttonMinLengthGreater"
                            Content="&gt;"
                            Padding="0 -2 0 0"
                            Style="{StaticResource stylePanelSquareButtons}"
                            Height="18"
                            Width="18"/>

                    <!-- MAX -->
                    <TextBlock
                            Name="tblockMaxLength"
                            Text="max:"
                            FontSize="12"
                            Margin="20 0 0 0"/>

                    <Button
                            Name="buttonMaxLengthLesser"
                            Content="&lt;"
                            Margin="10 0 0 0"
                            Padding="0 -2 0 0"
                            Style="{StaticResource stylePanelSquareButtons}"
                            Height="18"
                            Width="18"/>

                    <TextBox 
                            Name="tboxMaxLength"
                            Text="{Binding maxLen}"
                            IsReadOnly="True"
                            FontSize="12"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Padding="0 0 0 0"
                            Style="{StaticResource stylePanelTextBoxes}"
                            Height="18"
                            Width="30"/>

                    <Button
                            Name="buttonMaxLengthGreater"
                            Content="&gt;"
                            Padding="0 -2 0 0"
                            Style="{StaticResource stylePanelSquareButtons}"
                            Height="18"
                            Width="18"/>
                </StackPanel>


                <!-- CONS & VOWS HEADER LABELS -->
                <Grid Margin="0 8 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                                Name="tblockCons"
                                Text="consonants:"
                                FontSize="12"
                                FontWeight="DemiBold"
                                HorizontalAlignment="Center"
                                Grid.Column="0"/>

                    <TextBlock
                                Name="tblockVows"
                                Text="vowels:"
                                FontSize="12"
                                FontWeight="DemiBold"
                                HorizontalAlignment="Center"
                                Grid.Column="1"/>
                </Grid>


                <!-- CONS & VOWS -->
                <StackPanel Orientation="Horizontal"
                                Margin="10 5 0 0">

                    <!-- CONS LABELS -->
                    <StackPanel Margin="0 0 0 0">
                        <TextBlock
                                Name="tblockConsMaxRow"
                                Text="max in a row:"
                                Margin="0 0"
                                Height="18"
                                FontSize="12"/>

                        <TextBlock
                                Name="tblockConsPerc"
                                Text="spawn chance correction:"
                                Margin="0 1"
                                Height="18"
                                FontSize="12"/>

                        <TextBlock
                                Name="tblockConsRepeats"
                                Text="allow repeats:"
                                Margin="0 1"
                                Height="18"
                                FontSize="12"/>
                    </StackPanel>

                    <!-- CONS INPUT FIELDS -->
                    <StackPanel Margin="15 0 0 0">
                        <StackPanel Orientation="Horizontal">
                            <Slider 
                                    Name="sbarConsMax"
                                    Value="{Binding consMaxRow}"
                                    Orientation="Horizontal"
                                    Margin="0 0"
                                    Width="50"
                                    Height="18"
                                    Minimum="{Binding rowLowerbound}"
                                    Maximum="{Binding rowUpperbound}"
                                    IsSnapToTickEnabled="True"
                                    TickFrequency="1"
                                    AutoToolTipPlacement="TopLeft"/>

                            <TextBlock
                                    Name="tblockConsMaxValue"
                                    Text="{Binding ElementName=sbarConsMax, Path=Value, Mode=OneWay}"
                                    HorizontalAlignment="Center"
                                    Margin="4 0 0 0"
                                    Width="18"
                                    Height="18"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Slider 
                                    Name="sbarConsPerc"
                                    Value="{Binding consCorrection}"
                                    Orientation="Horizontal"
                                    Margin="0 1"
                                    Width="50"
                                    Height="18"
                                    Minimum="{Binding correctionLowerbound}"
                                    Maximum="{Binding correctionUpperbound}"
                                    IsSnapToTickEnabled="True"
                                    TickFrequency="1"
                                    AutoToolTipPlacement="TopLeft"/>

                            <TextBlock
                                    Name="tblockConsPercValue"
                                    Text="{Binding ElementName=sbarConsPerc, Path=Value, Mode=OneWay, StringFormat={}{0}%}"
                                    HorizontalAlignment="Center"
                                    Margin="4 2 0 0"
                                    Width="30"
                                    Height="18"/>
                        </StackPanel>

                        <CheckBox
                                Name="checkConsRepeats"
                                IsChecked="{Binding consAllowRepeats}"
                                Margin="-2 1 0 0"
                                Style="{StaticResource stylePanelCheckBoxes}"/>
                    </StackPanel>


                    <!-- VOWS LABELS -->
                    <StackPanel Margin="20 0 0 0">
                        <TextBlock
                                Name="tblockVonsMaxRow"
                                Text="max in a row:"
                                Margin="0 0"
                                Height="18"
                                FontSize="12"/>

                        <TextBlock
                                Name="tblockVonsPerc"
                                Text="spawn chance correction:"
                                Margin="0 1"
                                Height="18"
                                FontSize="12"/>

                        <TextBlock
                                Name="tblockVonsRepeats"
                                Text="allow repeats:"
                                Margin="0 1"
                                Height="18"
                                FontSize="12"/>
                    </StackPanel>

                    <!-- VOWS INPUT FIELDS -->
                    <StackPanel Margin="15 0 0 0">
                        <StackPanel Orientation="Horizontal">
                            <Slider 
                                    Name="sbarVowsMax"
                                    Value="{Binding vowsMaxRow}"
                                    Orientation="Horizontal"
                                    Width="50"
                                    Margin="0 0"
                                    Height="18"
                                    Minimum="{Binding rowLowerbound}"
                                    Maximum="{Binding rowUpperbound}"
                                    IsSnapToTickEnabled="True"
                                    TickFrequency="1"
                                    AutoToolTipPlacement="TopLeft"/>

                            <TextBlock
                                    Name="tblockVowsMaxValue"
                                    Text="{Binding ElementName=sbarVowsMax, Path=Value, Mode=OneWay}"
                                    HorizontalAlignment="Center"
                                    Margin="4 0 0 0"
                                    Width="18"
                                    Height="18"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Slider 
                                    Name="sbarVowsPerc"
                                    Value="{Binding vowsCorrection}"
                                    Orientation="Horizontal"
                                    Width="50"
                                    Margin="0 1"
                                    Height="18"
                                    Minimum="{Binding correctionLowerbound}"
                                    Maximum="{Binding correctionUpperbound}"
                                    IsSnapToTickEnabled="True"
                                    TickFrequency="1"
                                    AutoToolTipPlacement="TopLeft"/>

                            <TextBlock
                                    Name="tblockVowsPercValue"
                                    Text="{Binding ElementName=sbarVowsPerc, Path=Value, Mode=OneWay, StringFormat={}{0}%}"
                                    HorizontalAlignment="Center"
                                    Margin="4 2 0 0"
                                    Width="30"
                                    Height="18"/>


                        </StackPanel>

                        <CheckBox
                                Name="checkVowsRepeats"
                                IsChecked="{Binding vowsAllowRepeats}"
                                Margin="-2 1 0 0"
                                Style="{StaticResource stylePanelCheckBoxes}"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </StackPanel>

    </Canvas>
    
</UserControl>
